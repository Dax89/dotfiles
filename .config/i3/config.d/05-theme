# Color Scheme
set $background #202020
set $foreground #f4f1d6
set $primary    #88b0d7
set $secondary  #ffb22e
set $urgent     #ff7575
set $inactive   #757575

# class                 border      background  text        indicator   child_border
client.focused          $primary    $primary    $background $secondary $primary
client.focused_inactive $inactive   $inactive   $foreground $secondary $inactive
client.unfocused        $background $background $foreground $secondary $background
client.urgent           $urgent     $urgent     $background $secondary $urgent
client.placeholder      $primary    $primary    $background $secondary $primary
client.background       $background

# vi: ft=i3config
