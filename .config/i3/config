# Use pactl to adjust volume in PulseAudio.
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.config/i3/manage_volume.rb set-volume +1%
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.config/i3/manage_volume.rb set-volume -1%
bindsym XF86AudioMute exec --no-startup-id ~/.config/i3/manage_volume.rb toggle-mute
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

